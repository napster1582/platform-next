{
  "name": "platform-next",
  "version": "0.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "main": "index.js",
  "scripts": {
    "postinstall": "npx simple-git-hooks",
    "docs:dev": "vitepress dev docs --port 3000",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs --port 3000",
    "cms:dev": "pnpm --filter cms dev",
    "cms:start": "pnpm --filter cms start",
    "cms:build": "pnpm --filter cms build",
    "cms:seed": "pnpm --filter cms seed",
    "web:dev": "pnpm --filter web dev",
    "web:build": "pnpm --filter web build",
    "web:preview": "pnpm --filter web preview",
    "web:check": "pnpm --filter web check",
    "web:check:watch": "pnpm --filter web check:watch",
    "web:test": "pnpm --filter web test",
    "web:test:unit": "pnpm --filter web test:unit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "stylelint": "stylelint **/*.{svelte,css,pcss,less,scss,sass} --quiet-deprecation-warnings",
    "stylelint:fix": "stylelint **/*.{svelte,css,pcss,less,scss,sass} --quiet-deprecation-warnings --fix",
    "prettier": "prettier --write"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "pre-push": "pnpm docs:build && pnpm cms:build && pnpm web:build",
    "commit-msg": "pnpm commitlint --edit $1"
  },
  "lint-staged": {
    "*.{js,jsx,vue,svelte}": [
      "pnpm lint:fix",
      "pnpm prettier"
    ],
    "*.{svelte,css,pcss,less,scss,sass}": [
      "pnpm stylelint:fix",
      "pnpm prettier"
    ]
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.6.1",
    "@culur/stylelint-config": "^1.2.0",
    "@iconify/json": "^2.2.46",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "commitlint": "^17.6.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "prettier-plugin-svelte": "^2.10.0",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^15.4.0",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "vitepress": "1.0.0-alpha.75",
    "vitest": "^0.29.8"
  }
}
